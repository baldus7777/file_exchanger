<form action="{{ path_for('enter') }}" method="post" enctype="multipart/form-data" autocomplete="off" role="form"
    class="form-horizontal">
    <div class="form-header">
        <h1>Войдите на сайт</h1>
        <p>чтобы получить больше возможностей!</p>
    </div> 
    <hr>
    <div class="form-body">

        <div class="form-group">
            <label for="email" class="col-sm-2 control-label">Email:</label>
            <div class="col-sm-10">
                <div class="{{ errors['Email'] ? ' has-error has-feedback'}}">
                <input type="email" maxlength="100" name="email" id="email" value="{{ old['email'] }}" class="form-control" placeholder="{{ errors['Email'] ? errors['Email'][0] : 'john@doe.com'}}" autofocus title="введите ваш email"  />
                </div>
            </div>

        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">Пароль:</label>
            <div class="col-sm-10">
            <div class="{{ errors['password'] ? ' has-error has-feedback'}}">
                <input type="password" maxlength="30" name="password" id="password" value="{{ old['password'] }}" class="form-control" title="введите ваш пароль"  placeholder="{{ errors['password'] ? errors['password'][0] : ''}}"/>
            </div>
            </div>
        </div>
    </div>
    <button type="submit" name="submit" class="btn btn-default">Войти</button>
    {{ csrf.field | raw }}
</form>
