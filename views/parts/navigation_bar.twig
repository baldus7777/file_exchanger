<div class="container-fluid">
    <div class="row">
        <nav role="navigation" class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header header">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <h1>UPPU.RU</h1>
                                <p>Файлы каждый день!</p>
                            </div>
                        </div>
                    </div>
                    <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div id="navbarCollapse" class="collapse navbar-collapse navbar-right">
                    <ul class="nav nav-pills">
                        <li class="{{ active == 'home' ? 'active' }}">
                            <a href="{{ path_for('home') }}">Главная</a>
                        </li>
                        {% if auth.user %}
                            <li class={{ active == 'user' ? 'active' }}>
                                <a href="{{ path_for('user.page', { 'user_id': auth.user.id })  }}">Профиль</a>
                            </li>
                            <li class="btn-exit">
                                <a href="{{ path_for('exit') }}">Выйти</a>
                            </li>
                        {% else %}
                            <li class="{{ active == 'reg' ? 'active' }}">
                                <a href="{{ path_for('user.reg') }}">Регистрация</a>
                            </li>
                            <li class="{{ active == 'enter' ? 'active' }}">
                                <a href="{{ path_for('enter') }}">Войти</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
                    <div class="row">
                        <div class="col-lg-4 col-lg-push-4">
                            {% include '/parts/search_bar.twig' %}
                        </div>
                        <div class="col-lg-3 col-lg-pull-4">
                            {% include '/parts/user_bar.twig' %}
                        </div>
                    </div>
        </nav>
    </div>
</div>
